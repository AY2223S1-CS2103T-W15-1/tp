@startuml
!include style.puml
scale 557*544
skinparam arrowThickness 1.1
skinparam arrowColor STORAGE_COLOR
skinparam classBackgroundColor STORAGE_COLOR

package Storage{

package "UserPrefs Storage" #F4F6F6{
Class "<<interface>>\nUserPrefsStorage" as UserPrefsStorage
Class JsonUserPrefsStorage
}

package "TodoList Storage" #F4F6F6{
Class "<<interface>>\nTodoListStorage" as TodoListStorage
Class JsonTodoListBookStorage
Class JsonSerializableTodoList
Class JsonAdaptedTodo
}

Class "<<interface>>\nStorage" as Storage
Class StorageManager

package "SoConnect Storage" #F4F6F6{
Class "<<interface>>\nSoConnectStorage" as SoConnectStorage
Class JsonSoConnectStorage
Class JsonSerializableSoConnect
Class JsonAdaptedPerson
Class JsonAdaptedTag
}

}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Storage

StorageManager .up.|> Storage
StorageManager --> "1" UserPrefsStorage
StorageManager --> "1" SoConnectStorage
StorageManager --> "1" TodoListStorage

Storage --|> UserPrefsStorage
Storage --|> SoConnectStorage
Storage --|> TodoListStorage

JsonUserPrefsStorage .up.|> UserPrefsStorage
JsonSoConnectStorage .up.|> SoConnectStorage
JsonTodoListBookStorage .up.|> TodoListStorage
JsonSoConnectStorage ..> JsonSerializableSoConnect
JsonTodoListBookStorage ..> JsonSerializableTodoList
JsonSerializableSoConnect --> "*" JsonAdaptedPerson
JsonSerializableTodoList --> "*" JsonAdaptedTodo
JsonAdaptedPerson --> "*" JsonAdaptedTag
JsonAdaptedTodo --> "*" JsonAdaptedTag

@enduml
